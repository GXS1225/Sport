<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bac"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/top" >

        <LinearLayout
            android:id="@+id/scan_info_back_btn"
            android:layout_width="70.0dip"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10.0dip"
                android:contentDescription="@null"
                android:src="@drawable/scan_back_default" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/white" 
            android:textSize="20dp"/>

    </RelativeLayout>
     
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="50.0dip" >

            <ImageView
                android:id="@+id/mail1"
                android:layout_width="17.0dip"
                android:layout_height="18.5dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.0dip"
                android:background="@drawable/register_nickname_icon" />

            <EditText
                android:id="@+id/edt_user"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="11.0dip"
                android:layout_toRightOf="@+id/mail1"
                android:background="@null"
                android:hint="用户名"
                android:maxLength="10"
                android:textColorHighlight="@color/zone_list_time"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/userinfo_line" />
        </RelativeLayout>
        <RelativeLayout
           
            android:layout_width="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="50.0dip" >

            <ImageView
                android:id="@+id/mail3"
                android:layout_width="16.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.0dip"
                android:background="@drawable/register_password_icon" />

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="11.0dip"
                android:layout_toRightOf="@+id/mail3"
                android:background="@null"
                android:hint="密码"
                android:password="true"
                android:textColorHighlight="@color/zone_list_time"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/userinfo_line" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:id="@+id/mail4"
                android:layout_width="16.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.0dip"
                android:background="@drawable/register_password_icon" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.0dip"
                android:layout_marginRight="11.0dip"
                android:layout_toRightOf="@+id/mail4"
                android:background="@null"
                android:hint="昵称"
                android:password="true"
                android:textColorHighlight="@color/zone_list_time"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/userinfo_line" />
        </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_bind_cancel"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

</LinearLayout>