<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
	android:background="@color/gainsboro">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp" >
        <RelativeLayout 
            android:id="@+id/sport_sql_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
		        <TextView
		            android:id="@+id/sport_name" 
		            android:layout_width="170dp"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:text="运动"
		            android:maxLines="2"
		            android:textSize="@dimen/mq_size15"
		            android:layout_marginLeft="20dp"
		            android:textColor="@color/light_grey"/>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="3dp"
		            android:layout_below="@id/sport_name"
		            android:layout_alignLeft="@id/sport_name"
		            android:orientation="horizontal">
		             <TextView 
		                 android:id="@+id/sport_sql_value"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center_horizontal"
			            android:text="10"
			            android:textSize="12sp"
		            	android:textColor="@android:color/black"/>
		             <TextView 
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:text="千卡/60分钟"
		                 android:gravity="center_horizontal"
		                 android:textColor="@color/light_grey"
		                 android:textSize="12sp"/>
		        </LinearLayout>
		 </RelativeLayout>
        <ImageButton 
            android:id="@+id/sportitem_add"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/sport_add"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:focusable="false"
            />
         <LinearLayout
           android:id="@+id/sportitem_addvalue"
           android:layout_width="55dp"
           android:layout_height="30dp"
           android:visibility="gone"
           android:layout_alignParentRight="true"
           android:layout_centerHorizontal="true"
           android:gravity="center"
           android:layout_marginTop="5dp"
           android:layout_marginRight="5dp"
           android:orientation="vertical">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
                    android:id="@id/sport_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/mq_size9"
                    android:text="22.5"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千卡"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/mq_size9"/>
            </LinearLayout>
            <TextView 
                android:id="@+id/sport_time"
	            android:layout_marginTop="3dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="30分钟"
	            android:textColor="@color/light_grey"
	            android:textSize="@dimen/mq_size9"
            />
       </LinearLayout>
        <TextView 
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/black_translucent"
          	android:layout_toRightOf="@id/sport_sql_lay"
          	android:layout_marginLeft="30dp"
            />
    </RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/black_translucent"
	    android:layout_marginLeft="20dp"/>
</LinearLayout>
