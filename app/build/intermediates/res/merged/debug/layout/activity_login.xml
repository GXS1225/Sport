<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <edu.bzu.project.activity.CustomVideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-110dp"
            android:src="@drawable/title" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello !" />

        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/user_accountIv"
                android:layout_width="17.0dip"
                android:layout_height="18.5dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.0dip"
                android:background="@drawable/register_nickname_icon" />

            <EditText
                android:id="@+id/edt_user"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="11.0dip"
                android:layout_toRightOf="@+id/user_accountIv"
                android:background="@null"
                android:hint="请输入用户名"
                android:textColorHighlight="@color/zone_list_time"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/userinfo_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip" >

            <ImageView
                android:id="@+id/user_secretIv"
                android:layout_width="16.0dip"
                android:layout_height="18.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.0dip"
                android:background="@drawable/register_password_icon" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/userinfo_line" />

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:hint="请输入登录密码"
                android:password="true"
                android:textColorHighlight="@color/zone_list_time"
                android:textSize="16.0sp"
                android:layout_above="@+id/image_view"
                android:layout_toRightOf="@+id/user_secretIv"
                android:layout_toEndOf="@+id/user_secretIv" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="25.0dip"
            android:background="@drawable/btn_bind_cancel"
            android:gravity="center"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="16.0sp" />


        <TextView
            android:id="@+id/probation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="直接试用"
            android:textColor="#ff33b5e5" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/OtherLogin">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:id="@+id/login_qqRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6.0dip" >

                <ImageView
                    android:id="@+id/ivQQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_login_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivQQ"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="QQ"
                    android:textColor="#ff818181" />
            </RelativeLayout>

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:id="@+id/login_tencentRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/ivWeChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_login_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivWeChat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="微信"
                    android:textColor="#ff818181" />
            </RelativeLayout>

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:id="@+id/login_sinaRl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6.0dip" >

                <ImageView
                    android:id="@+id/ivSinaWeibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_login_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivSinaWeibo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:text="新浪微博"
                    android:textColor="#ff818181" />
            </RelativeLayout>
            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="300.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/OtherLogin">

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20.0dip"
                android:text="注册账号"
                android:textColor="#ffffffff"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/btn_ForgetPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="忘记密码?"
                android:textColor="#ffffffff"
                android:textSize="14.5sp" />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>