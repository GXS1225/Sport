<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
	       android:layout_width="match_parent"
	       android:layout_height="40dip"
	       android:background="@drawable/top"
	       android:layout_alignParentTop="true"
	        >
	       <Button
	           android:id="@+id/show_back"
	           android:layout_width="24dip"
	           android:layout_height="20dip"
	           android:layout_alignParentLeft="true"
	           android:layout_centerVertical="true"
	           android:layout_marginLeft="10dip"
	           android:background="@drawable/back_btn" />
	
	       <TextView
	           android:id="@+id/show_title"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:gravity="center_vertical"
	          android:layout_centerInParent="true"
	           android:text="本次活动清单"
	           android:textColor="#ffffff"
	           android:textSize="20dip" />
	
	       <Button
	           android:id="@+id/show_success"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentRight="true"
	           android:layout_centerVertical="true"
	           android:layout_marginRight="10dip"
	           android:text="提交数据"
	           android:textSize="15sp"
	           android:textColor="@color/white"
	           android:background="@null" />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	     <com.baidu.mapapi.map.MapView
	        android:id="@+id/mapview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:clickable="true" 
	       />
	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="200dp"
	         android:orientation="vertical"
	         android:background="@drawable/bg_map"
	         android:alpha="0.9"
	         android:layout_margin="15dp"
	         android:layout_alignParentBottom="true">
	         <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal">
	             <ImageView 
		             android:layout_width="0dp"
		             android:layout_height="50dp"
		             android:layout_weight="1"
		             android:layout_gravity="center_vertical"
		             android:src="@drawable/icon_sport"
		            />
	        	 <RelativeLayout 
	        	     android:layout_width="0dp"
	        	     android:layout_height="70dp"
	        	     android:layout_weight="1"
	        	     
	        	     >
	        	     <TextView 
	        	         android:id="@+id/mapinfo_juli"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content" 
			             android:layout_centerInParent="true"
			             android:text="0.7"
			             
			             android:textSize="35sp"/>
	        	     <TextView 
	        	         android:layout_width="wrap_content"
	        	         android:layout_height="wrap_content"
	        	         android:layout_alignBottom="@id/mapinfo_juli"
	        	         android:text="km"
	        	         android:textSize="16sp"
	        	         android:layout_toRightOf="@id/mapinfo_juli"
	        	         android:textColor="@color/gray"/>
	        	 </RelativeLayout>
	        	 <RelativeLayout 
	        	     android:layout_width="0dp"
	        	     android:layout_height="70dp"
	        	     android:layout_weight="1"
	        	     >
	        	     <TextView 
	        	         android:id="@+id/mapinfo_time"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content" 
			             android:text="0.7"
			             android:layout_centerInParent="true"
			             android:textSize="35sp"/>
	        	     <TextView 
	        	         android:layout_width="wrap_content"
	        	         android:layout_height="wrap_content"
	        	         android:layout_alignBottom="@id/mapinfo_time"
	        	         android:text="S"
	        	         android:layout_toRightOf="@id/mapinfo_time"
	        	         android:textSize="16sp"
	        	         android:textColor="@color/gray"/>
	        	 </RelativeLayout>
	         </LinearLayout>
	         <View 
	             android:layout_width="match_parent"
	             android:paddingLeft="3px"
	             android:paddingRight="3px"
	             android:layout_height="1.5px"
	             android:background="@color/orange"/>
	        <LinearLayout 
	            android:layout_marginTop="30px"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	           >
	            <RelativeLayout 
	                android:id="@+id/mapinfo_sudu_lay"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center_horizontal">
	                <TextView
	                    android:id="@+id/mapinfo_suduShow" 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="0.0"
	                    android:textSize="35sp"
	                    android:layout_centerHorizontal="true"
	                    android:layout_marginTop="5dp"/>
	                
	                <TextView 
	                    android:id="@+id/mapinfo_sudu"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="16sp"
	                    android:layout_centerHorizontal="true"
	                    android:layout_marginTop="10dp"
	                    android:text="时速(km/h)"
	                    android:textColor="@color/gray"
	                    android:layout_below="@id/mapinfo_suduShow"/>
	                <View 
		                android:layout_width="1dp"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@id/mapinfo_sudu"
		                android:layout_alignTop="@id/mapinfo_suduShow"
		                android:layout_alignBottom="@id/mapinfo_sudu"
		                android:layout_marginLeft="5dp"/>
	            </RelativeLayout>
	            
	             <RelativeLayout 
	                android:id="@+id/mapinfo_juli_lay"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center_horizontal">
	                <TextView
	                    android:id="@+id/mapinfo_bushuShow" 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="0.0"
	                    android:textSize="35sp"
	                    android:layout_centerHorizontal="true"
	                    android:layout_marginTop="5dp"/>
	                
	                <TextView 
	                    android:id="@+id/mapinfo_bushu"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="16sp"
	                    android:layout_marginTop="10dp"
	                    android:layout_centerHorizontal="true"
	                    android:text="距 离"
	                    android:textColor="@color/gray"
	                    android:layout_below="@id/mapinfo_bushuShow"/>
	                
	            </RelativeLayout>
	            
	            <RelativeLayout 
	                android:id="@+id/map_qianka_lay"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center_horizontal">
	                <TextView
	                    android:id="@+id/mapinfo_qiankaShow" 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="0.0"
	                    android:textSize="35sp"
	                    android:layout_centerHorizontal="true"
	                    android:layout_marginTop="5dp"/>
	                
	                <TextView 
	                    android:id="@+id/mapinfo_qianka"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="16sp"
	                    android:layout_marginTop="10dp"
	                    android:layout_centerHorizontal="true"
	                    android:text="消耗(kCal)"
	                    android:textColor="@color/gray"
	                    android:layout_below="@id/mapinfo_qiankaShow"/>
	            </RelativeLayout>
	        </LinearLayout>
	     </LinearLayout>
	</RelativeLayout>
</LinearLayout>
