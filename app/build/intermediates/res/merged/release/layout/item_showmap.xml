<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    android:orientation="vertical"
    android:paddingRight="20dp"
	>
  
    <ImageView 
        android:id="@+id/circle"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_marginLeft="70dp"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/blue_cricle"/>
	<View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="130dp"
        android:layout_below="@id/circle"
        android:layout_marginLeft="85dp"
        android:background="#A6A6A6" />
   <LinearLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/view_2"
        android:background="@drawable/timeline_content"
        android:orientation="vertical"
        android:padding="10dp" >

       
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffa8835c"
		        android:text="运动模式："/>
		    <TextView 
		        android:id="@+id/lookmap_mode"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="跑步"
		        android:textColor="@color/green"
		        android:layout_marginLeft="10dp"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="7dp"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffa8835c"
		        android:text="距离："/>
		    <TextView 
		        android:id="@+id/lookmap_juli"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="100km"
		        android:textColor="@color/green"
		        android:layout_marginLeft="10dp"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffa8835c"
		        android:text="时间："/>
		    <TextView 
		        android:id="@+id/lookmap_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="100s"
		        android:textColor="@color/green"
		        android:layout_marginLeft="10dp"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffa8835c"
		        android:text="消耗千卡："/>
		    <TextView 
		        android:id="@+id/lookmap_qianka"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="100kc"
		        android:textColor="@color/green"
		        android:layout_marginLeft="10dp"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ffa8835c"
		        android:text="评价："/>
		    <TextView 
		        android:id="@+id/lookmap_pingjia"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="优"
		        android:textColor="@color/green"
		        android:layout_marginLeft="10dp"/>
		</LinearLayout>
    </LinearLayout>

   <RelativeLayout
                android:id="@+id/tips_left"
                android:layout_width="40.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" >

                <ImageView
                    android:id="@+id/tips_img_upline"
                    android:layout_width="3.0dip"
                    android:layout_height="10.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/line"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/tips_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_tips" />

                <View
                    android:id="@+id/tips_img_downline"
                    android:layout_width="3.0dip"
                    android:layout_height="10.0dip"
                    android:layout_below="@id/tips_img"
                    android:layout_centerHorizontal="true"
                    android:background="#ffd2cbbe"
                    android:scaleType="fitXY"
                    android:visibility="visible" />

                

            </RelativeLayout>

   <TextView
       android:id="@+id/textView1"
       android:layout_marginLeft="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/tips_left"
       android:layout_alignRight="@+id/tips_left"
       android:layout_below="@+id/tips_left"
       android:textColor="#ffa8835c"
       android:text="时间" />

   <TextView
       android:id="@+id/show_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView1"
       android:layout_below="@+id/textView1"
       android:layout_marginTop="5dp"
       android:text="2015.9.10"
       android:textColor="#ffa8835c"
       android:textSize="12dp" />

   <TextView
       android:id="@+id/show_time1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/show_time"
       android:layout_below="@+id/show_time"
       android:layout_marginTop="5dp"
       android:textColor="#ffa8835c"
       android:text="8:07" />

</RelativeLayout>