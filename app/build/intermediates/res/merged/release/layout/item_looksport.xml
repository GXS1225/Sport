<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/gainsboro">
	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:divider="@color/umeng_fb_color_btn_pressed"
		android:orientation="horizontal"
		>
		<TextView
			android:id="@+id/time"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:textSize="16sp"
			android:text="11:11"/>
		<View
			android:layout_width="2px"
			android:layout_height="match_parent"
			android:background="#FFA042"/>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_weight="4">
			<LinearLayout
				android:id="@+id/photo_lay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/photo1"
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:scaleType="fitXY"
					android:layout_gravity="left"
					android:padding="5dp"
					android:src="@drawable/create_photo"
					android:visibility="gone"/>
				<ImageView
					android:id="@+id/photo2"
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:scaleType="fitXY"
					android:padding="5dp"
					android:src="@drawable/create_photo"
					android:visibility="gone"/>
				<ImageView
					android:id="@+id/photo3"
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:scaleType="fitXY"
					android:padding="5dp"
					android:src="@drawable/find_weight"
					android:visibility="gone"/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/sandybrown"/>
			<LinearLayout
				android:id="@+id/weigth_lay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center">
				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/find_weight"
					android:padding="5dp"
					android:scaleType="fitXY"
					android:layout_gravity="left"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="体重"
					android:layout_gravity="center"
					android:textSize="18sp"/>
				<TextView
					android:id="@+id/weigth_value"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="45.0"
					android:layout_gravity="center"
					android:textColor="@color/indianred"
					android:textSize="18sp"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="kg"
					android:layout_gravity="center"
					android:textSize="18sp"/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="#FFA042"/>
			<LinearLayout
				android:id="@+id/sport_lay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>
				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/icon_sport"
					android:padding="5dp"
					android:scaleType="fitXY"
					android:layout_gravity="left"/>
				<TextView
					android:id="@+id/item_value"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="2"
					android:textSize="18sp"
					android:textColor="@color/indianred"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="项,共消耗"
					android:textSize="18sp"/>
				<TextView
					android:id="@+id/qianka_value"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="123"
					android:textColor="@color/indianred"
					android:textSize="18sp"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="千卡"
					android:textSize="18sp"/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="#FFA042"/>
			<LinearLayout
				android:id="@+id/ganshou_lay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center">
				<TextView
					android:id="@+id/ganshou"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:maxHeight="200dp"
					android:scrollbars="vertical"
					android:padding="5dp"
					android:textColor="@color/gray"
					android:text="感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受
	                	感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受感受
	               "
					android:textSize="15sp"/>
			</LinearLayout>

		</LinearLayout>
	</TableRow>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#FFA042"/>
</TableLayout>
