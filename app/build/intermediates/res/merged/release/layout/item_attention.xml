<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@color/gainsboro">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/attention_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_icon_default_main"/>
        <TextView 
            android:id="@+id/attention_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USer 没有网名了"
            android:layout_alignTop="@id/attention_icon"
            android:layout_alignBottom="@id/attention_icon"
            android:layout_toRightOf="@id/attention_icon"
            android:layout_marginLeft="5dp"
            android:textColor="#ffa8835c"
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/attention_guanzhu"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/attention_icon"
            android:layout_alignBottom="@id/attention_icon"
            android:layout_alignParentRight="true"
            android:text="取消关注"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textSize="17sp"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#ffa8835c"
      
            />
        <ImageButton
            android:id="@+id/attention_guanzhuphoto"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_alignTop="@id/attention_icon"
            android:layout_alignBottom="@id/attention_icon"
            android:layout_alignParentRight="true"          
            android:layout_marginRight="5dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/friend_follow"
            android:background="@null"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/aliceblue"/>

</LinearLayout>
