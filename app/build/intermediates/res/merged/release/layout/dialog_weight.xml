<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/gainsboro">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/radius_border_pop_gray_title"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/dialog_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dip"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="50dip"
			android:layout_marginRight="50dip"
			android:gravity="center"
			android:text="选择运动"
			android:textColor="#333333"
			android:textSize="15dip" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">
		<NumberPicker
			android:id="@+id/numberpicker1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right|center"
			/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="70dp"
			android:text=" : "
			android:textStyle="bold"
			android:textColor="@color/font_Pink"
			android:textSize="@dimen/mq_size12"/>
		<NumberPicker
			android:id="@+id/numberpicker2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left|center"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:background="@drawable/radius_border_pop_gray_bottom"
		android:orientation="horizontal" >
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1" >
			<Button
				android:layout_width="80dip"
				android:id="@+id/dialog_weight_ok"
				android:layout_height="35dip"
				android:layout_centerInParent="true"
				android:background="@drawable/ensure_button_sure_bg"
				android:text="确认"
				android:textColor="#ffffff"
				android:textSize="15dip" />
		</RelativeLayout>
		<RelativeLayout

			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1" >
			<Button
				android:layout_width="80dip"
				android:id="@+id/dialog_weight_no"
				android:layout_height="35dip"
				android:layout_centerInParent="true"
				android:background="@drawable/ensure_button_cancel_bg"
				android:text="取消"
				android:textColor="#ffffff"
				android:textSize="15dip" />

		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
