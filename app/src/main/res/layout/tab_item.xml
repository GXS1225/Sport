<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gainsboro">
    <CheckedTextView 
        android:id="@id/tabitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tabitem_name"/>
    <ImageView 
        android:id="@id/tabitem_indacate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tabitem_name"
        android:layout_marginTop="@dimen/tabitem_indacate_top"
        android:src="@drawable/tab_indacate"
        android:visibility="gone"/>
    

</RelativeLayout>
