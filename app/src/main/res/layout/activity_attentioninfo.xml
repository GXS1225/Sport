<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
    	android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/top"
        android:layout_alignParentTop="true"
         >
        <Button
            android:id="@+id/attention_back"
            android:layout_width="23dip"
            android:layout_height="18dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_btn" />

        <TextView
            android:id="@+id/attention_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
           android:layout_centerInParent="true"
            android:text="个人主页"
            android:textColor="#ffffff"
            android:textSize="20dip" />

        <Button
            android:id="@+id/look_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="查看战绩" />
    </RelativeLayout>
   
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@drawable/search_group_background"
            android:gravity="center_horizontal">
            <ImageView 
                android:id="@+id/attention_photo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitCenter"
                android:src="@drawable/title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView 
                android:id="@+id/attention_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有网名了"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23sp"/>
            <LinearLayout 
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/white"/>
                <TextView 
                    android:id="@+id/guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="100"
                    android:layout_marginRight="10dp"/>
                <View 
                    android:layout_width="1px"
                    android:layout_height="10dp"
                    android:background="@color/gray"/>
                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="粉丝"/>
                <TextView 
                    android:id="@+id/fenshi" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="100"/>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout 
                android:id="@+id/attention_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
	                <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="动态"
	                android:textSize="18sp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:textStyle="bold"
	                android:gravity="center"
	                android:textColor="@color/gray"
                	/>
	                <View
	                    android:id="@+id/indecate1" 
	                    android:layout_width="90dp"
	                    android:layout_height="2px"
	                    android:background="@color/red"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/attention_jilu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
	                <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="记录"
	                android:textSize="18sp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:textStyle="bold"
	                android:gravity="center"
	                android:textColor="@color/gray"
                	/>
	                <View 
	                    android:id="@+id/indecate2" 
	                    android:layout_width="90dp"
	                    android:layout_height="2px"
	                    android:background="@color/red"/>
            </LinearLayout>
        </LinearLayout>

	<ListView
        android:id="@+id/info_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@color/gainsboro">

    </ListView>

	<View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="#ffa8835c"/>

</LinearLayout>
